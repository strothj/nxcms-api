extends partials/layout

block content
  h1 Sign up
  form(method='post')
    input(type='hidden' name='_csrf' value=csrf)

    p Username
    input(type='username' name='username' value='user' required)

    p Email address
    input(type='text' name='email' value='user@example.com' required)

    p Password
    input(type='password' name='password' value='password' required)
    span &nbsp; password

    p Verify Password
    input(type='password' name='verifyPassword' value='password' required)

    p
      p Name
      input(type='text' name='firstName' value='John' required)
      span First name
      input(type='text' name='lastName' value='Doe' required)
      span Last name

    p: button(type='submit') Sign up
